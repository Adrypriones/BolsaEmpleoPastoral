@model PastoralEmpleo.ViewModel.DocumentRequiredViewModel

@{
    ViewData["Title"] = "Document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>

    <div class="row">

        <div class="col-xs-12 col-sm-3">
            <a href="@Url.Action("Candidate", "Inscription")" class="btn btn-info" style="color:#004D97"><i class="zmdi zmdi-plus"></i> &nbsp; PERSONALES</a>
        </div>

        <div class="col-xs-12 col-sm-3">
            <a href="@Url.Action("Studies", "Inscription")" class="btn btn-success" style="color:#004D97"><i class="zmdi zmdi-format-list-bulleted"></i> &nbsp; FORMACIÓN</a>
        </div>

        <div class="col-xs-12 col-sm-3">
            <a href="@Url.Action("Experience", "Inscription")" class="btn btn-primary" style="color:#004D97"><i class="zmdi zmdi-search"></i> &nbsp; EXPERIENCIA</a>
        </div>

        <div class="col-xs-12 col-sm-3">
            <a href="@Url.Action("Document", "Inscription")" class="btn btn-danger" style="color:#004D97"><i class="zmdi zmdi-comment-list"></i> &nbsp; OTROS DOCUMENTOS</a>
        </div>

        <div class="container-fluid">
            <div class="page-header">
                <h1 class="text-center"><i class="zmdi zmdi-account zmdi-hc-fw"></i> <small style="color:firebrick">Otros Documentos</small></h1>
            </div>
        </div>



        <div class="container-fluid">
            <div class="panel panel-info">

                @using (Html.BeginForm("Siguiente", "Inscription", FormMethod.Post))
                {

                    @Html.AntiForgeryToken()

                    <fieldset>



                        <div class="container-fluid">
                            <div class="row">

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.IdrequiredDocument, htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownListFor(model => model.IdrequiredDocument, Model.RequiredDocumenList, "", new { @class = "form-control" })

                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        <label for="Document">Adjunte Certificado</label>
                                        <input type="file" class="form-control">
                                    </div>
                                </div>

                            </div>
                        </div>
                    </fieldset>

                    <div class="text-left">
                        <div class="margin-top: 20px">
                            <input type="submit" value="Siguiente" class="btn btn-primary btn-bordred btn-sm" />
                        </div>
                    </div>

                    <div class="text-right">
                        <div class="margin-top: 20px">
                            <input type="submit" value="Cancelar" class="btn btn-danger btn-bordred btn-sm" />
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

</section>