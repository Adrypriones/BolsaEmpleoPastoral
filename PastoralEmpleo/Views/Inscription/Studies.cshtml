
@model PastoralEmpleo.ViewModel.StudiesInformationViewModel

@{
    ViewData["Title"] = "Studies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section>
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="text-titles"><i class="zmdi zmdi-account zmdi-hc-fw"></i> <small>Nivel Estudio</small></h1>
        </div>
    </div>
    <div class="row">

        <div class="col-xs-12 col-sm-3">
            <a href="@Url.Action("Candidate", "Inscription")" class="btn btn-info" style="color:#004D97"><i class="zmdi zmdi-plus"></i> &nbsp; PERSONALES</a>
        </div>

        <div class="col-xs-12 col-sm-3">
            <a href="@Url.Action("Studies", "Inscription")" class="btn btn-success" style="color:#004D97"><i class="zmdi zmdi-format-list-bulleted"></i> &nbsp; FORMACIÓN</a>
        </div>

        <div class="col-xs-12 col-sm-3">
            <a href="@Url.Action("Experience", "Inscription")" class="btn btn-primary" style="color:#004D97"><i class="zmdi zmdi-search"></i> &nbsp; EXPERIENCIA</a>
        </div>

        <div class="col-xs-12 col-sm-3">
            <a href="@Url.Action("Document", "Inscription")" class="btn btn-danger" style="color:#004D97"><i class="zmdi zmdi-comment-list"></i> &nbsp; OTROS DOCUMENTOS</a>
        </div>

        <div class="container-fluid">
            <div class="panel panel-info">

                @using (Html.BeginForm("Continuar", "Inscription", FormMethod.Post))
                {

                    @Html.AntiForgeryToken()

                    <fieldset>

                        <legend><i class="zmdi zmdi-account-box"></i> &nbsp; Académico</legend>

                        <div class="container-fluid">
                            <div class="row">

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.School, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(model => model.School, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Idstudylevel, htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownListFor(model => model.Idstudylevel, Model.StudyLevelList, "", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Obtainedtitle, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(model => model.Obtainedtitle, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Idacademicstate, htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownListFor(model => model.Idacademicstate, Model.academicStateList, "", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Startdate, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(model => model.Startdate, new { @class = "form-control", required = "required", @type = "Date" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Enddate, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(model => model.Enddate, new { @class = "form-control", required = "required", @type = "Date" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Idperiodicity, htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownListFor(model => model.Idperiodicity, Model.PeriodicityList, "", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        <label for="Document">Adjuntar Titulo ó Certificación</label>
                                        <input type="file" class="form-control">
                                    </div>
                                </div>

                            </div>
                        </div>
                    </fieldset>

                    <div class="text-center">
                        <div class="margin-top: 20px">
                            <input type="submit" value="Continuar" class="btn btn-primary btn-bordred btn-sm" />
                        </div>
                    </div>

                    <div class="text-right">
                        <div class="margin-top: 20px">
                            <input type="submit" value="Eliminar" class="btn btn-danger btn-bordred btn-sm" />
                        </div>
                    </div>
                }
         </div>
     </div>
 </div>

    

</section>