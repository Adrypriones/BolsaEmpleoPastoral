@model PastoralEmpleo.ViewModel.ExperienceInformationViewModel
@{
    ViewData["Title"] = "Experience";
    ViewData["Description"] = "Experiencia Laboral";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>

    <header>
    </header>

    <div class="row">

      <div class="container-fluid">
            <div class="panel panel-info">

                @using (Html.BeginForm("Experience", "Experience", FormMethod.Post , new { enctype = "multipart/form-data" }))
                {

                    @Html.AntiForgeryToken()

                    <fieldset>


                        <div class="container-fluid">
                            <div class="row">

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Companyname, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(model => model.Companyname, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(model => model.Position, new { @class = "form-control" })
                                    </div>
                                </div>
                                
                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Idworkstatus, htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownListFor(model => model.Idworkstatus, Model.WorkStatusList, "", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <label asp-for="Initialperiod" class="control-label"></label>
                                    <input asp-for="Initialperiod" class="form-control" required type="date" />
                                    <span asp-validation-for="Initialperiod" class="text-danger"></span>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        <label asp-for="Endperiod" class="control-label"></label>
                                        <input asp-for="Endperiod" class="form-control" type="date" />
                                        <span asp-validation-for="Endperiod" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Inmediateboss, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(model => model.Inmediateboss, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        @Html.LabelFor(model => model.Inmediatechiefnumbre, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(model => model.Inmediatechiefnumbre, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group label-floating">
                                        <label asp-for="FilePath" class="control-label"></label>
                                        <input asp-for="File" class="form-control" required type="File" />
                                        <span asp-validation-for="File" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </fieldset>

                    <div class="text-center">
                        <div class="margin-top: 20px">
                            <input type="submit" value="Guardar" class="btn btn-primary btn-bordred btn-sm"  />
                        </div>
                    </div>

                    <a href="@Url.Action("ExperienceList", "Experience")" button type="button" class="btn btn-outline-primary btn-rounded w-md waves-effect waves-light m-b-5" style="color:#ffffff"><i class="fa fa-list-alt"></i>Lista</a>
                }

            </div>
        </div>
    </div>

</section>

