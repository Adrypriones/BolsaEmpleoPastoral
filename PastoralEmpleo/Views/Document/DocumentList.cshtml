@model IEnumerable<PastoralEmpleo.ViewModel.DocumentsViewModel>
@{
    ViewData["Title"] = "DocumentList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>

    <section>

        <div class="container-fluid">
            <div class="page-header">
                <h1 class="text-center"><i class="zmdi zmdi-account zmdi-hc-fw"></i> <small style="color:#004D97"><i class="fas fa-layer-group"></i>Listado Documentos</small></h1>
            </div>
        </div>



        <section>

            <div class="container-fluid">
                <div class="panel panel-success">

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-hover text-center">
                                <thead>
                                    <tr>
                                        <th class="text-center">DOCUMENTO</th>
                                        <th class="text-center">CONSULTAR DOCUMENTO</th>


                                    </tr>
                                </thead>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <label asp-for="@item.DocumentType" class="control-label"></label>
                                        </td>

                                        <td>
                                            <ul class="breadcrumb breadcrumb-tabs">
                                                <li>
                                                    <a asp-controller="Document" asp-action="Imprimir" asp-route-id="@item.IdDocument" class="btn btn-warning btn-rounded" w-md waves-effect waves-light m-b-5" style="color:#ffffff">
                                                        Imprimir
                                                    </a>
                                                    <a asp-controller="Document" asp-action="Document" asp-route-id="@item.IdDocument" class="btn btn-success btn-rounded small" style="color:#000000">
                                                        Editar
                                                    </a>

                                                    <a asp-controller="Document" asp-action="Document" class="btn btn-dribbble btn-rounded small " style="color:#000000">
                                                        Nuevo
                                                    </a>

                                                </li>

                                            </ul>
                                        </td>
                                    </tr>
                                }


                            </table>

                            <a asp-controller="Document" asp-action="Generar" class="btn btn-outline-warning btn-rounded" w-md waves-effect waves-light m-b-5" style="color:#ffffff">
                                Imprimir HV
                            </a>

                        </div>

                    </div>

                </div>
            </div>
        </section>
    </section>

</body>

