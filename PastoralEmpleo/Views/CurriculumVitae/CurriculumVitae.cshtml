@model PastoralEmpleo.ViewModel.CurriculumVitaeSearch
@{
    ViewData["Title"] = "CurriculumVitae";

}

<body>
    <section>

        <div class="container-fluid">
            <div class="page-header">
                <h1 class="text-center"><i class="zmdi zmdi-account zmdi-hc-fw"></i> <small style="color:orange">Lista Hojas Vida</small></h1>
            </div>
        </div>

        <div class="container-fluid">
            @using (Html.BeginForm("Buscar", "CurriculumVitae", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="col-xs-12 col-sm-12">
                    <div class="form-group label-floating">
                        @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Position, new { @class = "form-control" })
                    </div>

                </div>

                <form class="well">
                    <div class="col-xs-12">
                        <p class="text-center">
                            <button type="submit" id="boton" data-toggle="modal" data-target="#exampleModal" class="btn btn-primary btn-raised btn-sm "><i class="zmdi zmdi-search"></i> &nbsp; Buscar</button>
                        </p>
                    </div>
                </form>
            }
        </div>



        @if (!string.IsNullOrEmpty(@ViewBag.Error))
        {
            <div class="alert alert-danger" style="color:#000000" align="center">
                <strong>@ViewBag.Error</strong>
            </div>
        }
    </section>



</body>
